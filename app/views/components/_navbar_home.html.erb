<div class="navbar-home">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-home-brand" do %>
    <%= image_tag "EYE.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-home-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Create a swing", new_event_path(current_user), class: "navbar-home-item navbar-home-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-home-item">
        <div class="dropdown">
          <% if !current_user.photo? %>
            <% photo_url = "avatar-placeholder.png" %>
          <% else %>
            <% photo_url = current_user.photo.path %>
          <% end %>
          <%= cl_image_tag(photo_url, width: 40, height: 40, crop: :fill,  class: "avatar dropdown-toggle", id: "navbar-home-menu", "data-toggle" => "dropdown") %>

          <ul class="dropdown-menu dropdown-menu-right navbar-home-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to my_events_events_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "My swings") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_participations_path(current_user) do %>
                <i class="fa fa-rocket"></i>  <%= t(".profile", default: "My participations") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>

        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-home-item navbar-home-link" %>
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-home-item navbar-home-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-home-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-home-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
