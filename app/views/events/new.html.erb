<div class="container">
<h1 class="text-center">Create a Swing</h1>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @event do |f|%>
      <%= f.input :title, placeholder: 'Soirée cuir-moustache...' %>
      <%= f.input :start_at, value: Time.now%>
      <%= f.input :description, placeholder: 'Loulou & Coco, 28 et 34 ans vous accueillent pour une soirée chaude!'  %>
      <%= f.input :address %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>

