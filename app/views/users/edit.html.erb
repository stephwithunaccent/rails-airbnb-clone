<div class="container">

    <div class="tabs text-center">
      <a class="tab active" data-target="#bio">
        <h2>Profile</h2>
      </a>
      <a class="tab" data-target="#projects">
        <h2>My events</h2>
      </a>
      <a class="tab" data-target="#contact">
        <h2>My participations</h2>
      </a>
    </div>

    <div class="container">
      <div class="row tab-content" id="bio">
        <div class="col-xs-12 col-sm-4 border-right">
           <% if !@user.photo? %>
            <div class="text-center">
              <%= cl_image_tag("avatar-placeholder.png", width: 200, height: 200, crop: :fill) %>
              <%= simple_form_for @user do |f| %>
                <%= f.input :photo, as: :attachinary %>
                <%= f.submit "Save", class: "btn btn-default" %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center">
              <%= cl_image_tag @user.photo.path, width: 200, height: 200, radius: :max, crop: :fill,  gravity: :face %>
              <%= simple_form_for @user do |f| %>
                <%= f.input :photo, as: :attachinary, label: false %>
                <%= f.submit "Save", class: "btn btn-default" %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="col-xs-12 col-sm-8">

          <%= simple_form_for @user do |f| %>
            <%= f.input :name, label: "My couple name is" %>
            <%= f.input :sex, collection: ["Man & Woman", "Man & Man", "Woman & Woman"], label: "My couple is" %>
            <%= f.button :submit %>
          <% end %>
          <h3>Reviews</h3>
        </div>
        <div class="tab-content hidden" id="projects">
          <p>blabla</p>
        </div>
        <div class="tab-content hidden" id="contact">
          <p>Contact me if you want.</p>
        </div>
      </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="javascript/tabs.js"></script>
  </div>
